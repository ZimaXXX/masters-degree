<Window x:Class="GesturesEditor.EditFieldWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditFieldWindow" Height="210" Width="289">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="73,53,0,0" Name="tbNewFieldName" VerticalAlignment="Top" Width="120" Text="{Binding Path=FieldText, Mode=TwoWay}" />
        <Label Content="Field's new text:" Height="28" HorizontalAlignment="Left" Margin="83,29,0,0" Name="label1" VerticalAlignment="Top" Width="101" />
        <Button Content="Save" Height="32" Margin="23,101,151,0" Name="bSave" VerticalAlignment="Top" Click="bSave_Click" />
        <Button Content="Cancel" Height="32" Margin="154,101,20,0" Name="bCancel" VerticalAlignment="Top" Click="bCancel_Click" />
    </Grid>
</Window>
